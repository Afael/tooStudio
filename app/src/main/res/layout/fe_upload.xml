<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Upload"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"/>
        <include layout="@layout/ma_divider_horizontal_dark_up"/>

        <LinearLayout
            android:id="@+id/lay_browse_upload"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/custom_button_login_dialog">

            <TextView
                android:id="@+id/txt_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose File"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTint="#949292"
                android:textColor="#949292"
                android:drawableTop="@drawable/ic_cloud_upload_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#949292"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" KB"
                    android:gravity="center"
                    android:textColor="#949292"
                    />
            </LinearLayout>


            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/input_layout_file_size"-->
                <!--android:layout_width="300dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:visibility="gone">-->

                <!--<EditText-->
                    <!--android:id="@+id/edit_file_size"-->
                    <!--android:layout_width="300dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:drawablePadding="10dp"-->
                    <!--android:hint="File Size"-->
                    <!--android:singleLine="true" />-->

            <!--</android.support.design.widget.TextInputLayout>-->

            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/input_layout_file_path"-->
                <!--android:layout_width="300dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:visibility="gone">-->

                <!--<EditText-->
                    <!--android:id="@+id/edit_file_path"-->
                    <!--android:layout_width="300dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:drawablePadding="10dp"-->
                    <!--android:hint="File Path"-->
                    <!--android:singleLine="true" />-->

            <!--</android.support.design.widget.TextInputLayout>-->

        </LinearLayout>

        <include layout="@layout/ma_divider_horizontal_dark_up"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_upload_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    android:textColor="@color/color_red"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button_login_dialog"/>

            </LinearLayout>

            <include layout="@layout/ma_divider_vertical_dark"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Upload"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button_login_dialog"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
