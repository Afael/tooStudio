<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fe_rename_create_folder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/fe_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fe_new_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edit_text_search"
                android:drawableLeft="@drawable/ic_content_paste_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Specific name"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true" />

            <include layout="@layout/ma_divider_horizontal_dark_up" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rename_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_login_dialog"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/color_red"
                    android:textSize="15sp" />

                <include layout="@layout/ma_divider_vertical_dark" />

                <Button
                    android:id="@+id/rename_save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_login_dialog"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>