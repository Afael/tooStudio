<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fe_content"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fe_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/loading_shape" />

        <TextView
            android:id="@+id/fe_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/fe_option"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/main_layout"
        android:paddingLeft="8dp"
        android:drawableRight="@drawable/ic_option"
        android:gravity="center_vertical"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="?android:selectableItemBackground"/>

</LinearLayout>
