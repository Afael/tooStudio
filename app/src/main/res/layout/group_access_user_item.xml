<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupAccessUserItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/groupAccessUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access Name"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/groupAccessUserDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access Descriptions"
            android:layout_below="@+id/groupAccessName"/>

    </LinearLayout>

    <include layout="@layout/ma_divider_horizontal_dark_up"/>

</LinearLayout>