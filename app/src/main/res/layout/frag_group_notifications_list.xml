<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adv_group_participans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adv_group_action"
        android:background="@color/color_white_grey"
        android:padding="10dp">

        <TextView
            android:id="@+id/group_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_group_notifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/adv_group_participans">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>