<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/close_new_folder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/circle_background_black"
            android:gravity="center"
            android:text="X"
            android:textColor="#949292"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/new_folder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Create New Folder"
            android:textColor="#949292"
            android:textStyle="bold"
            android:textSize="18sp" />

        <include layout="@layout/ma_divider_horizontal_dark_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/new_folder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_document_box"
                    android:drawableTint="#949292"
                    android:drawablePadding="10dp"
                    android:hint="New Folder"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#949292"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <include layout="@layout/ma_divider_horizontal_dark_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_save_new_folder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button_login_dialog"
                android:text="Save"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="#949292"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>