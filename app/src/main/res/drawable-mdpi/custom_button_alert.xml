<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/color_black" android:centerColor="@color/color_black" android:endColor="@color/color_black" android:angle="90"></gradient>

            <stroke android:width="1dp" android:color="@color/color_black"></stroke>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#393838" android:centerColor="#393838" android:endColor="#393838" android:angle="90"></gradient>

            <stroke android:width="1dp" android:color="#393838"></stroke>
        </shape>
    </item>

</selector>