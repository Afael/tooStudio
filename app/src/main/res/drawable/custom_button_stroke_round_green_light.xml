<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/color_green_light" android:width="2dp"/>
            <corners android:radius="25dp"/>
            <padding android:right="10dp" android:left="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/colorPrimary" android:width="4dp"/>
            <corners android:radius="25dp"/>
            <padding android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>